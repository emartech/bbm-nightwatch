<p id="notice"><%= notice %></p>

<h1>Donations</h1>

<table class="table">
  <thead>
    <tr>
      <th>Source name</th>
      <th>Source address</th>
      <th>Quantity</th>
      <th>Food type</th>
      <th>Anonymous</th>
      <th>Information source</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @donations.each do |donation| %>
      <tr>
        <td><%= donation.contact_name %></td>
        <td><%= donation.source_name %></td>
        <td><%= donation.source_address %></td>
        <td><%= donation.quantity %></td>
        <td><%= donation.food_type %></td>
        <td><%= donation.anonymous %></td>
        <td><%= donation.status %></td>
        <td><%= link_to 'Show', donation %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Donation', new_donation_path, class: "btn btn-primary" %>
