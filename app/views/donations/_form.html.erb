<%= simple_form_for(donation, html: { class: 'form-horizontal' }) do |form| %>
  <%= form.input :information_source %>
  <%= form.input :source_name %>
  <%= form.input :source_address %>
  <%= form.input :food_type %>
  <%= form.input :quantity %>

  <%= form.input :available_from %>
  <%= form.input :available_to %>

  <%= form.input :anonymous, required: false %>
  <%= form.input :not_perishable, required: false, as: :boolean %>

  <%= form.button :submit, t('donation.submit') %>
<% end %>
